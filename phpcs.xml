<?xml version="1.0"?>
<ruleset name="App coding standart">
    <arg value="p"/>
    <arg name="colors" />
    <arg name="cache" value="storage/.phpcs.json" />

    <rule ref="PSR12" />
    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <file>config</file>
    <file>public</file>
    <file>app</file>
</ruleset>
